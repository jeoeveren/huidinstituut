<!-- app/views/shared/_navbar.html.erb -->

<!-- Creates the navigation bar on top of the screen -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class="navbar-header">
        <a href="#" class="active navbar-brand">Huid & Leefstijl Support</a>

        <!-- Create a button with some lines in it that will be shown once the menu items can not be shown in the viewport -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBarCollapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Create a navigation bar -->
      <div class="collapse navbar-collapse" id="navBarCollapse">
        <!-- Menu items on the right side of the screen -->
        <ul class="nav navbar-nav navbar-right">
          <!-- Create a drop down with sun-menu for a specific menu item -->
          <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Behandelingen<b class="caret"></b></a>
          <ul class="dropdown-menu">

            <!-- Add some rails stuff here -->
            <% @categories.each do |category| %>
              <li class="dropdown-submenu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= category.name %></a>
              <ul class="dropdown-menu">
                <% category.treatments.each do |treatment| %>
                  <li><a href="#"><%= treatment.name %></a></li>
                <% end %>
              </ul>
              </li>
            <% end %>
          </ul>
          </li>

          <!-- Create a drop down for a specific menu item -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Over Karin<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Het instituut</a></li>
              <li><a href="#">Werken bij ons</a></li>
            </ul>
          </li>
          <li><a href="#contact">Contact</a></li>

        </ul>
      </div> <!-- End collapse navigation bar -->
    </div> <!-- End row -->
  </div> <!-- End container -->
</div> <!-- End navigation bar -->
